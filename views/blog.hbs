<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="../public/style.css">
  <link rel="icon" href="../public/assets/logo.png">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
    integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
  <title>Blog</title>
</head>

<body>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <nav class="navbar navbar-expand-sm navbar-light bg-success bg-opacity-10">
    <div class="container-fluid mx-3">
      <a class="navbar-brand" href="/">
        <img src="../public/assets/logo.png" alt="logo" height="40">
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText"
        aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav ms-auto me-auto mb-2 mb-lg-0">
          <li class="nav-item px-2">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item px-2">
            <a class="nav-link active fw-bold text-success" href="/blog">Blog</a>
          </li>
        </ul>
        {{#if isLogin}}
        <div class="dropdown">
          <button class="btn btn-outline-success dropdown-toggle" type="button" id="profilenav"
            data-bs-toggle="dropdown" aria-expanded="false">
            Hi, {{ user.name }}!
          </button>
          <ul class="dropdown-menu" aria-labelledby="profilenav">
            <li><a class="dropdown-item" href="#">Profile Settings</a></li>
            <li><a class="dropdown-item text-danger" href="/logout">Logout</a></li>
          </ul>
        </div>
        {{else}}
        <a href="/login" class="btn btn-outline-primary mx-2">Login</a>
        <a href="/register" class="btn btn-outline-secondary mx-2">Register</a>
        {{/if}}
        <button type="button" class="btn btn-success ms-2" data-bs-toggle="modal" data-bs-target="#contact-modal">
          Contact Me
        </button>
      </div>
    </div>
  </nav>
  <div class="container my-5">
    <div class="d-flex flex-row-reverse mb-3">
      {{#if isLogin}}
      <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#create-post">
        Create a new post
      </button>
      {{/if}}
    </div>
    {{#if messages.success}}
    <div class="alert alert-success" role="alert" id="alert">
      <strong>Success!</strong> {{ messages.success }}
    </div>
    {{/if}}
    {{#if messages.danger}}
    <div class="alert alert-danger" role="alert" id="alert">
      <strong>Failed!</strong> {{ messages.danger }}
    </div>
    {{/if}}
    <!-- dynamic content would be here -->
    {{#each datapost}}
    <div class="d-flex flex-column flex-lg-row align-items-center p-3 shadow mb-3" id="content">
      <div class="me-3">
        <img src="../uploads/{{ this.image }}" alt="{{ this.image }}" width="350">
      </div>
      <div class="flex-fill mt-3 mt-lg-0">
        {{#if ../isLogin}}
        <div class="d-flex justify-content-end" role="group">
          <button type="submit" class="btn btn-info me-2" data-bs-toggle="modal"
            data-bs-target="#edit-post-{{ this.slug }}">Edit Post</button>
          <button type="button" class="btn btn-danger" data-bs-toggle="modal"
            data-bs-target="#delete-modal-{{ this.slug }}">Delete Blog</button>
          <form action="/blog/delete" method="post">
            <div class="modal fade" id="delete-modal-{{ this.slug }}" tabindex="-1" aria-labelledby="delete-modal-label"
              aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="delete-modal-label">Are you sure?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <input type="text" name="slug" id="slug" hidden="true" value="{{ this.slug }}">
                    <input type="text" name="image" id="image" hidden="true" value="{{ this.image }}">
                    This action can't be undone!
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
        {{/if}}
        <h1>
          <a href="/blog/{{ slug }}" class="text-decoration-none text-dark">{{ this.title }}</a>
        </h1>
        <div class="text-secondary">
          {{getFullTime this.postAt}} | {{ this.author }}
        </div>
        <div class="text-secondary mb-3">
          {{getDistanceTime this.postAt}}
        </div>
        <p>
          {{ this.content }}
        </p>
      </div>
    </div>
    {{else}}
    <h1>No post found</h1>
    {{/each}}
  </div>

  <!-- Modal -->
  <div class="modal fade" id="contact-modal" tabindex="-1" aria-labelledby="contact-modal-label" aria-hidden="true">
    <div class="modal-dialog">
      <form action="/contact" method="post">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="contact-modal-label">Contact Form</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input type="text" class="form-control" id="name" name="name">
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email Address</label>
              <input type="email" class="form-control" id="email" name="email">
            </div>
            <div class="mb-3 d-flex flex-row">
              <div class="me-1 flex-grow-1">
                <label for="phone" class="form-label">Phone Number</label>
                <input type="number" class="form-control" id="phone" name="phone">
              </div>
              <div class="ms-1">
                <label for="subject">Subject</label><br>
                <select class="form-select mt-2" name="subject" id="subject">
                  <option>Information</option>
                  <option>Emergency</option>
                  <option>Other Subject</option>
                </select>
              </div>
            </div>
            <div class="mb-3">
              <label for="messages">Messages</label>
              <textarea class="form-control mt-1" placeholder="Leave a comment here" id="messages" name="messages"
                style="height: 200px"></textarea>
            </div>
            <label for="skills">Skills</label>
            <div class="mt-1 d-flex flex-row btn-group" role="group" aria-label="Basic checkbox toggle button group"
              id="skills">
              <input name="skills" type="checkbox" class="flex-fill btn-check" id="btncheck1" autocomplete="off"
                value="HTML">
              <label class="btn btn-outline-success" for="btncheck1">HTML</label>

              <input name="skills" type="checkbox" class="flex-fill btn-check" id="btncheck2" autocomplete="off"
                value="CSS">
              <label class="btn btn-outline-success" for="btncheck2">CSS</label>

              <input name="skills" type="checkbox" class="flex-fill btn-check" id="btncheck3" autocomplete="off"
                value="JavaScript">
              <label class="btn btn-outline-success" for="btncheck3">JavaScript</label>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-success" id="submit">Send</button>
          </div>
        </div>
      </form>
    </div>
  </div>

  <div class="modal fade" id="create-post" tabindex="-1" aria-labelledby="create-post-label" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <form action="" method="post" enctype="multipart/form-data">
          <div class="modal-header">
            <h5 class="modal-title" id="create-post-label">Create a new Post</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <input type="text" class="form-control" id="title" name="title">
            </div>
            <div class="mb-3">
              <label for="content">Content</label>
              <textarea class="form-control mt-1" id="content" name="content" style="height: 200px"></textarea>
            </div>
            <div class="mb-3">
              <label for="image" class="form-label">Upload Image</label>
              <input class="form-control" type="file" id="imagefile" name="imagefile">
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-success" id="submit">Save changes</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  {{#each datapost}}
  <div class="modal fade" id="edit-post-{{ this.slug }}" tabindex="-1" aria-labelledby="edit-post-label"
    aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <form action="/blog/edit" method="post" enctype="multipart/form-data">
          <input type="text" name="slug" id="slug" hidden="true" value="{{ this.slug }}">
          <div class="modal-header">
            <h5 class="modal-title" id="edit-post-label">Edit Post</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <input type="text" class="form-control" id="title" name="title" value="{{ this.title }}">
            </div>
            <div class="mb-3">
              <label for="content">Content</label>
              <textarea class="form-control mt-1" id="content" name="content"
                style="height: 200px">{{ this.content }}</textarea>
            </div>
            <div class="mb-3">
              <label for="image" class="form-label">Upload Image</label>
              <input class="form-control" type="file" id="imagefile" name="imagefile">
              <input type="text" name="image" id="image" name="image" hidden="true" value="{{ this.image }}">
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-success">Save changes</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  {{/each}}
  <script src="../public/script.js"></script>
  <script src="https://unpkg.com/ionicons@5.0.0/dist/ionicons.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
</body>

</html>